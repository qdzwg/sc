extends ../layout/pageLayout
block stylesheetpage
	link(rel="stylesheet", href=baseUrl+'/stylesheets/help.css')
	style(type='text/css').
		.help_tw {
			margin-bottom: 30px;
		}

		.help_tw dl {
			float: left;
			width: 250px;
			line-height: 22px;
		}

		.help_tw dl dt {
			font-family: Microsoft Yahei;
			font-size: 14px;
			font-weight: bold;
		}
block pagecontent
	include ../common/helpList
	#main.cf
		+helpList(page)
		#help_c_zone
			.help_t 帮助中心　Help Center
			.help_c
				.help_tw.cf
					dl
						dt 会员相关问题
						dd
							a(href='/help/helpcenter/relatequestion1#q1') 1、如何注册宋城旅游会员账户？
						dd
							a(href='/help/helpcenter/relatequestion1#q2') 2、注册时手机号提示已被占用怎么办？
						dd
							a(href='/help/helpcenter/relatequestion1#q3') 3、忘记密码了怎么办？
						dd
							a(href='/help/helpcenter/relatequestion1#q4') 4、能够注销账户吗？
						dd
							a(href='/help/helpcenter/relatequestion1#q5') 5、成为会员有什么优惠吗？
					dl
						dt 预订常见问题：
						dd
							a(href='/help/helpcenter/relatequestion2#q1') 1、如何预订门票？
						dd
							a(href='/help/helpcenter/relatequestion2#q2') 2、如何预订酒店
						dd
							a(href='/help/helpcenter/relatequestion2#q3') 3、怎么进行网上支付？
						dd
							a(href='/help/helpcenter/relatequestion2#q4') 4、网上预订有什么优惠吗？
					dl
						dt 付款和发票：
						dd
							a(href='/help/helpcenter/relatequestion3#q1') 1、付款方式有哪些？
						dd
							a(href='/help/helpcenter/relatequestion3#q2') 2、可以提供发票吗？
						dd
							a(href='/help/helpcenter/relatequestion3#q3') 3、发票该如何获取？
						dd
							a(href='/help/helpcenter/relatequestion3#q4') 4、发票内容可以选择吗？
				.help_tw.cf
					dl
						dt 退款、退换货问题：
						dd
							a(href='/help/helpcenter/relatequestion4#q1') 1、门票退票及改签说明
						dd
							a(href='/help/helpcenter/relatequestion4#q2') 2、酒店退房及改签说明
						dd
							a(href='/help/helpcenter/relatequestion4#q3') 3、退款多长时间能返回到我的银行账户？
						dd
							a(href='/help/helpcenter/relatequestion4#q4') 4、退换货需要手续费吗？

