block scripts
   script(src=baseUrl+'/javascripts/float.js',type="text/javascript")
   script(src="https://qiyukf.com/script/f570a5eb049eb803b086e45829b07e48.js",charset="UTF-8")
   script(src=baseUrl+'/javascripts/ysf.js',type="text/javascript")
   -if(member)
      script.
          ysf.on({
              onload: function () {
                  ysf.config({
                      "uid": "#{member.loginId}",
                      "data": JSON.stringify([{
                          "key": "real_name",
                          "value": "#{member.realName}"
                      }, {
                          "key": "mobile_phone",
                          "value": "#{member.mobile}"
                      }, {
                          "key": "email",
                          "value": "#{member.email}"
                      }, {
                          "index": 0,
                          "key": "acc_type",
                          "label": "用户类型",
                          "value": acctype("#{member.accType}")
                      }, {
                          "index": 1,
                          "key": "reg_date",
                          "label": "注册日期",
                          "value": "#{member.accType}"
                      },
                          {
                              "index": 2,
                              "key": "last_login",
                              "label": "上次登录时间",
                              "value": "#{member.lastLoginTime}"
                          }
                      ])
                  });
              }
          });
   script.
      commonFloat(1000);
