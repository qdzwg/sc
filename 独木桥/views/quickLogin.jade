extends layout
block stylesheet
   link(rel='stylesheet', href=baseUrl+'/stylesheets/login.css')

block content
   include common/msgTips
   header.login-header
   .login-tab
      a(href="/quickLogin").cur="快捷登录"
      a(href="/login")="普通登录"
   div.login-panel
      form(method="post")#myform
         ul.order-list
            li
               input(type="tel",name="mobile",placeholder="请输入您的手机号码")
               input(type="button",value="发送验证码").card-btn#qcardBtn
            li
               input(type="tel",placeholder="请输入您的验证码",name="mobileCode",value=checkCode)
         div.page-line
         div.login-handle.btn-handle
            button(type="submit").btn.c-base
               i.font-icon.icon-iconfont-login
               | 登录
         p.login-explian
            a(href="/register")
               i.font-icon.icon-iconfont-zhanghu
               | 注册账号
            a(href="/forgetPassword")
               i.font-icon.icon-iconfont-suo
               | 忘记密码
   - if(error)
      +msg(error)
block scripts
   script(src=baseUrl+'/javascripts/login.js')
   script(src=baseUrl+'/javascripts/validate/jquery.validate.min.js')
   script(src=baseUrl+'/javascripts/validate/messages_zh.min.js')
   script(src=baseUrl+'/javascripts/validate/additional-methods.js')