extends layout
block stylesheet
    link(rel='stylesheet', href=baseUrl+'/stylesheets/turntable.css')

block content
    header
    .turntable-bg
        .rotate#rotate
            //ul.prize-list
            //    each item,i in items
            //        li(data-chance=item.winningRate,class="item"+i)
            //            span=item.productName
            //            img(src=item.imgurl)
        div(data-id=id,data-user=user.idCardBundFlag).pointer
    .turnNum
        if(user.idCardBundFlag==0)
            ="您还没有绑定身份证"
        else
            ="您还有"
            em#leftNum=items.leftNum
            ="次抽将机会"
    .turntable-title
    .turntable-content
        div="奖品说明:"
        p.price-info
            each item,i in items.dialProduct
                -var text=""
                case i
                    when 0
                        -text="给"
                    when 1
                        -text="我"
                    when 2
                        -text="一"
                    when 3
                        -text="天"
                    when 4
                        -text="还"
                    when 5
                        -text="你"
                    when 6
                        -text="千"
                    when 7
                        -text="年"
                span=text+":"
                    em=item.productName
        p
            | !{items.description}
    .winning-box#winningBox
        p
        a(href="/user/prizelist")="查看详情"
    .winning-box.error-box#errorBox
        p="别灰心再来一次"
        a(href="javascript:;")="再来一次"
    if(user.idCardBundFlag==0)
        .tips-layer(style="display:block; z-index:60;")#tipsLayer
            .tips-layer-header
                a(href="javascript:;")#tipsLayerClose
                    i.font-icon.icon-iconfont-32pxchaxian
            .tips-content="抱歉！抽将活动只支持已绑定身份证的会员，您还为绑定身份证！"
            .tips-handle
                a(href="/user/member").ent-btn="去绑定"
                a(href="javascripts:;").cancel-btn="取消"
        .mask(style="display:block;")
    else
        .mask#mask
block scripts
    script(src=baseUrl+'/javascripts/awardRotate.js')
    script(src=baseUrl+'/javascripts/turntable.js')
