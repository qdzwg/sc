//- 跟团游
mixin routeheader(items)
   h3.details-title=items.name
   p.details-explian=items.subName
   p.details-explian
      span.c-base=items.mockSale
      | 人出游
      span(data-flag=flag).share#sharebtn
        i.score-icon.icon-share
        ="分享"
      span.price.fr
         em ￥
         strong=items.startingPrice
         | 起
      span.original-price.fr
         em ￥
         strong=items.originalPrice

