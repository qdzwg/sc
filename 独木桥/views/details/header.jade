mixin detailsHeader(mold,items,flag)
   div.details-info
      case mold
         when "ticket"
            +ticketheader(items,flag)
         when "hotel"
            +hotelheader(items,flag)
         when "route"
            +routeheader(items,flag)
         when "line"
            +lineheader(items,flag)
         when "combo"
            +comboheader(items,flag)
         when "repast"
            +repastheader(items,flag)
         when "goods"
            +goodsheader(items,flag)

//- 门票
mixin ticketheader(items,flag)
   h3.details-title=items.parkName
   p.details-explian#subTitle=items.subTitle
   p.details-explian
      - if(items.tags!="")
         - each item,i in items.tags
            - if(i<2)
               span.pro-flag.c-base.border-base=item
      span(data-flag=flag).share#sharebtn
        i.score-icon.icon-share
        ="分享"
      span.price.fr
         em ￥
         strong=items.startingPrice
         | 起

//- 酒店
